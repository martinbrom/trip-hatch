<div class="trip-day-container col-xs-12">
    <div class="trip-day">
        <div class="trip-day-head" data-toggle="collapse" data-target="#day{{ day.id }}">
            <img src="/images/thumbnails/{{ day.path }}" class="img-responsive trip-day-thumbnail" alt="{{ day.description }}">

            <a href="#" data-ajax-url="{{ routeTripDay('delete', trip.id, day.id) }}" class="day-delete-btn non-collapse">
                <i class="fa fa-remove non-collapse"></i>
            </a>
            <a href="#" data-ajax-url="{{ routeTripDay('edit', trip.id, day.id) }}" class="day-edit-btn non-collapse">
                <i class="fa fa-pencil non-collapse"></i>
            </a>

            <h2>{{ day.title }}</h2>
        </div>
        <div id="day{{ day.id }}" class="trip-day-body-container collapse">
            <div class="trip-day-body"></div>
        </div>
    </div>
</div>