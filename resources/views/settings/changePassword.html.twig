{% extends "layouts/app.html.twig" %}

{% block title %}Change password{% endblock %}

{% block content %}

    <section class="container-section">
        <div class="container">
            <h1 class="text-center">Change password</h1>
            <div class="trip-create-container col-md-offset-3 col-md-6">
                <form action="{{ route('user.settings.change-password.submit') }}" method="post" class="form-horizontal">
                    <input name="csrf_token" type="hidden" value="{{ csrf_token }}">
                    <div class="form-group">
                        <label class="control-label" for="old_password">Old password</label>
                        <input type="password" id="old_password" name="old_password" class="form-control">
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="new_password">New password</label>
                        <input type="password" id="new_password" name="new_password" class="form-control">
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="new_password_confirm">New password again</label>
                        <input type="password" id="new_password_confirm" name="new_password_confirm" class="form-control">
                    </div>
                    <div class="form-group">
                        <input class="btn btn-primary btn-submit" type="submit" value="Change">
                    </div>
                </form>
            </div>
        </div>
    </section>

{% endblock %}