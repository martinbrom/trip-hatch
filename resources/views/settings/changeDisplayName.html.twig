{% extends "layouts/app.html.twig" %}

{% block title %}Change display name{% endblock %}

{% block content %}

    <section class="container-section">
        <div class="container">
            <h1 class="text-center">Change display name</h1>
            <div class="trip-create-container col-md-offset-3 col-md-6">
                <form action="{{ route('user.settings.change-display-name.submit') }}" method="post" class="form-horizontal">
                    <input name="csrf_token" type="hidden" value="{{ csrf_token }}">
                    <div class="form-group">
                        <label class="control-label" for="display_name">Display name</label>
                        <input type="text" id="display_name" name="display_name" value="{% if user.display_name is not null %}{{ user.display_name }}{% endif %}" class="form-control">
                    </div>
                    <div class="form-group">
                        <input class="btn btn-primary btn-submit" type="submit" value="Change">
                    </div>
                </form>
            </div>
        </div>
    </section>

{% endblock %}