<div id="action-add-modal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Title</h4>
            </div>
            <div class="modal-body">
                <form class="action-add-form" method="post">
                    <input name="csrf_token" type="hidden" value="{{ csrf_token }}">
                    <div class="form-group">
                        <label class="control-label" for="action_title">Action title</label>
                        <textarea rows="2" class="form-control" name="action_title" id="action_title"></textarea>
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="action_content">Action content</label>
                        <textarea rows="4" class="form-control" name="action_content" id="action_content"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="action_type" class="control-label">Action type</label>
                        <select class="form-control" name="action_type" id="action_type">
                            {% for action_type in action_types %}
                                <option value="{{ action_type.id }}">{{ action_type.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Submit" class="action-add-btn btn btn-primary">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="action-add-btn btn btn-default">Close</button>
            </div>
        </div>
    </div>
</div>